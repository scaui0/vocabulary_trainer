{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "targets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "stats": {
            "type": "object",
            "properties": {
              "tries_total": {"type": "integer"},
              "tries_right": {"type": "integer"},
              "tries_false": {"type": "integer"}
            },
            "required": ["tries_total", "tries_right", "tries_false"]
          },
          "examples": {
            "type": "object",
            "properties": {
              "target": {
                "type": "string"
              },
              "source": {
                "type": "string"
              }
            },
            "required": ["target", "source"]
          },
          "subentries": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "sources": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "targets": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "stats": {
                  "type": "object",
                  "properties": {
                    "tries_total": {"type": "integer"},
                    "tries_right": {"type": "integer"},
                    "tries_false": {"type": "integer"}
                  },
                  "required": ["tries_total", "tries_right", "tries_false"]
                },
                "examples": {
                  "type": "object",
                  "properties": {
                    "target": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    }
                  },
                  "required": ["target", "source"]
                }
              },
              "required": ["sources", "targets", "stats", "examples"]
            }
          }
        },
        "required": ["sources", "targets", "stats", "examples", "subentries"]
      }
    },
    "random_direction": {
      "type": "boolean",
      "default": true
    }
  },
  "required": ["entries", "random_direction"]
}
